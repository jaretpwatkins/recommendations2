<div class="page-header">
  <h1>
    Neighborhoods
    <a href="/neighborhoods/new" class="btn btn-lg btn-success">New Neighborhood</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Number of Restaurants</th>
        <th>Number of Recommendations</th>
        <th>Actions</th>
      </tr>

      <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood.name %></td>
        <td><%= neighborhood.restaurants.count %></td>
        <td><%= neighborhood.recommendations.count %></td>
        <td>
          <a href="/neighborhoods/<%= neighborhood.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
