<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Restaurant</th>
        <th>User</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>
        <td><img src="<%= Restaurant.find_by({:id => recommendation.restaurant_id}).image_url%>" class="img-responsive"></td>
        <td><%= link_to(Restaurant.find_by({:id => recommendation.restaurant_id}).name, Restaurant.find_by({:id => recommendation.restaurant_id}).yelp_url, :target => "_blank") %></td>
        <td><a href="/users/<%= User.find_by({:id => recommendation.user_id}).id %>"><%= User.find_by({:id => recommendation.user_id}).username %></a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
