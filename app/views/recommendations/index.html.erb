<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Restaurant</th>
        <th>Recommenders</th>
      </tr>

      <% @restaurants.each do |restaurant| %>

      <% if restaurant.recommendations.count >= 1 %>
      <tr>
        <td><img src="<%= restaurant.image_url%>" class="img-responsive"></td>
        <td><%= link_to(restaurant.name, restaurant.yelp_url, :target => "_blank") %></td>
        <td>
          <% restaurant.fans.each do |fan| %>
          <a href="/users/<%=fan.id %>"><%= fan.username %></a><br />
          <% end %>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
