<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>User</th>
        <th>Number of Recommendations</th>
        <th>Bio</th>
        <th>Action</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
<% if user.image == nil %>
<img src="http://enadcity.org/enadcity/wp-content/uploads/2017/02/profile-pictures.png" class="img-responsive" style="width:128px;height:128px;">

<% else %>

<img src="<%= user.image %>" class="img-responsive" style="width:128px;height:128px;">
<% end %>
        </td>

        <td><%= user.username %></td>
        <td><%= user.recommendations.count %> </td>
        <td><%= user.bio %></td>
        <td>
        <a href="/users/<%= user.id %>" class="btn btn-primary">Show Recommendations</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
