<div class="page-header">
  <h3><%= @user.username %>'s Recommendations</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% @user.recommendations.each do |recommendation| %>
      <tr>
        <td><img src="<%= recommendation.restaurant.image_url %>" class="img-responsive"</td>
        <td><%= link_to(recommendation.restaurant.name, recommendation.restaurant.yelp_url, :target => "_blank") %></td>
        <td><%= link_to(recommendation.restaurant.address, "https://www.google.com/maps/place/"+recommendation.restaurant.address.gsub(" ", "+"), :target => "_blank") %></td>
        <!-- <td><%#= Restaurant.find_by({:id => recommendation.restaurant_id}).address %></td> -->
        <td><a href="/neighborhoods/<%= recommendation.restaurant.neighborhood.id %>"><%= recommendation.restaurant.neighborhood.name %></a></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
