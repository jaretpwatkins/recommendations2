<div class="page-header">
  <h3><%= current_user.username %>'s Recommendations</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Address</th>
        <th>Neighborhood</th>
      </tr>

      <% current_user.recommendations.each do |restaurant| %>
      <tr>
        <td><img src="<%= Restaurant.find_by({:id => restaurant.restaurant_id}).image_url %>" class="img-responsive"></td>
        <td><%= link_to(Restaurant.find_by({:id => restaurant.restaurant_id}).name, Restaurant.find_by({:id => restaurant.restaurant_id}).yelp_url, :target => "_blank") %></td>
        <td><%= link_to(Restaurant.find_by({:id => restaurant.restaurant_id}).address, "https://www.google.com/maps/place/"+Restaurant.find_by({:id => restaurant.restaurant_id}).address.gsub(" ", "+"), :target => "_blank") %></td>
        <td><%= Restaurant.find_by({:id => restaurant.restaurant_id}).neighborhood %></td>

      </tr>
      <% end %>

    </table>
  </div>
</div>
